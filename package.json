{
  "name": "jttss",
	"displayName": "jttss",
	"description": "Splitting into lines by something. ",
	"publisher": "Bognaum",
	"icon": "IMG/icon.jpg",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.68.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onCommand:jttss.splitByComa",
        "onCommand:jttss.splitBySemicolon"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"keybindings": [
			{
				"key": "alt+shift+,",
				"args": ",\\s*",
				"command": "jttss.splitByComa",
				"when": "editorFocus && !editorReadonly"
			},
			{
				"key": "alt+shift+;",
				"args": ";\\s*",
				"command": "jttss.splitBySemicolon",
				"when": "editorFocus && !editorReadonly"
			}
		],
		"commands": [
			{
				"command": "jttss.splitByComa",
				"title": "Split By Coma"
			},
			{
				"command": "jttss.splitBySemicolon",
				"title": "Split By Semicolon"
			}
		],
		"menus": {
			"editor/title": [
				{"submenu": "jttss"}
			],
			"jttss": [
				{"command": "jttss.splitByComa"},
				{"command": "jttss.splitBySemicolon"}
			]
		},
		"submenus": [
			{"id": "jttss", "label": "JTTSS: ..."}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.68.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"eslint": "^8.6.0",
		"glob": "^7.2.0",
		"mocha": "^9.1.3",
		"typescript": "^4.5.4",
		"ts-loader": "^9.2.6",
		"webpack": "^5.66.0",
		"webpack-cli": "^4.9.1",
		"@vscode/test-electron": "^2.0.3"
	}
}
